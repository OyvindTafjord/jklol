<?xml version="1.0"?>
<project name="jklol" default="jar">
  <property name="tst-dir" location="test" />
  <property name="perf-dir" location="performance" />

  <path id="classpath.base">
  	<pathelement location="lib/guava-r09.jar" />
  </path>
  <path id="classpath.test">
    <pathelement location="/usr/share/java/junit.jar" />
    <pathelement location="build/" />
    <path refid="classpath.base" />
  </path>

  <target name="compile">
    <mkdir dir="build" />
    <javac srcdir="src" destdir="build" debug="on">
      <classpath refid="classpath.base"/>
    </javac>
  </target>

  <target name="compile-test" depends="compile">
    <mkdir dir="build" />
    <javac srcdir="${tst-dir}" destdir="build" debug="on">
      <classpath refid="classpath.test"/>
    </javac>
    <javac srcdir="${perf-dir}" destdir="build" debug="on">
      <classpath refid="classpath.test"/>
    </javac>
  </target>

  <target name="test" depends="compile-test">
    <junit fork="no">
      <classpath refid="classpath.test" />
      <formatter type="brief" usefile="false" />
      <test name="com.jayantkrish.jklol.cfg.CfgFactorTest" />
      <test name="com.jayantkrish.jklol.cfg.CfgParserTest" />
      <test name="com.jayantkrish.jklol.cfg.GrammarTest" />
      <test name="com.jayantkrish.jklol.evaluation.LossFunctionsTest" />
      <test name="com.jayantkrish.jklol.inference.GibbsSamplerTest" />
      <test name="com.jayantkrish.jklol.inference.JunctionTreeTest" />
      <test name="com.jayantkrish.jklol.models.CptTest" />
      <test name="com.jayantkrish.jklol.models.DiscreteVariableTest" />
      <test name="com.jayantkrish.jklol.models.FactorGraphTest" />
      <test name="com.jayantkrish.jklol.models.MixtureFactorTest" />
      <test name="com.jayantkrish.jklol.models.TableFactorTest" />
      <test name="com.jayantkrish.jklol.models.VariableNumMapTest" />
      <test name="com.jayantkrish.jklol.training.BNCountTrainerTest" />
      <test name="com.jayantkrish.jklol.training.EMTrainerTest" />
      <test name="com.jayantkrish.jklol.training.StochasticGradientTrainerTest" />
      <test name="com.jayantkrish.jklol.util.AssignmentTest" />
      <test name="com.jayantkrish.jklol.util.IndexedListTest" />
    </junit>
  </target>

  <target name="perf" depends="compile-test">
    <junit fork="no">
      <classpath refid="classpath.test" />
      <formatter type="brief" usefile="false" />
      <test name="com.jayantkrish.jklol.util.SparseOutcomeTablePerformanceTest" />
      <test name="com.jayantkrish.jklol.inference.JunctionTreePerformanceTest" />
    </junit>
  </target>

  <target name="jar" depends="compile">
    <jar destfile="jklol.jar" basedir="build" />
  </target>

  <target name="clean">
    <delete dir="build" />
    <delete file="jklol.jar" />
  </target>
  
</project>
